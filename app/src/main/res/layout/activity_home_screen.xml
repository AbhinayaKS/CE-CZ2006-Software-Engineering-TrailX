<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_bar_home"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                app:srcCompat="@drawable/home_bar"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/my_account_home"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/my_account" />
        </LinearLayout>

        <Button
            android:id="@+id/active_trail_home_bt"
            android:layout_width="342dp"
            android:layout_height="150dp"
            android:background="@drawable/active_trail_home_bt" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:gravity="center">

                <Button
                    android:id="@+id/settings_bt_home"
                    android:layout_width="180dp"
                    android:layout_height="245dp"
                    android:background="@drawable/settings_bt_home"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/my_trails_bt_home"
                    android:layout_width="180dp"
                    android:layout_height="245dp"
                    android:background="@drawable/my_trails_bt_home"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:gravity="center">

                <Button
                    android:id="@+id/discover_new_trails_bt_home"
                    android:layout_width="180dp"
                    android:layout_height="245dp"
                    android:background="@drawable/discover_new_trails_bt_home"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/emergency_sos_bt_home"
                    android:layout_width="180dp"
                    android:layout_height="245dp"
                    android:background="@drawable/emergency_sos_bt_home"
                    tools:ignore="ButtonStyle" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>