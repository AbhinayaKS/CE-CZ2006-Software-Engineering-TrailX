<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsScreen">

    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/back_to_home_bt_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_bar" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="618dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_pic_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/my_account"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/edit_profile_pic_settings"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/full_name_view_settings"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="start|center_vertical"
                        android:text="@string/fullname_view"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/full_name_edit_view"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit_full_name"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/age_view_settings"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="start|center_vertical"
                        android:text="@string/age_view"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/age_edit_view"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit_age"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gender_view_settings"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="start|center_vertical"
                        android:text="@string/gender_view"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gender_edit_view"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit_gender"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email_view_settings"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="start|center_vertical"
                        android:text="@string/email_view"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/email_edit_view"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit_email"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/height_view_settings"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="start|center_vertical"
                        android:text="@string/height_view"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/height_edit_view"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit_height"
                        android:layout_width="89dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weight_view_settings"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="start|end"
                        android:text="@string/weight_view"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/weight_edit_view"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit_weight"
                        android:layout_width="89dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/password_view_settings"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="bottom|start"
                        android:text="@string/password_view"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/password_edit_view"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/antic_slab"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#20710B"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit_password"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bt" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/options_bar_settings"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/settings_bt_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/settings_bt_bar"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/discover_new_trails_bt_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/discover_new_trails_bt_bar"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/active_trail_bt_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/active_trail_bt_bar"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/my_trails_bt_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/my_trails_bt_bar"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/music_bt_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/music_bt_bar"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>